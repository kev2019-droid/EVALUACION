<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVALUACION 1"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btnNuevoEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="Nuevo Estudiante"
        android:onClick="crearEsudiante"
        />
    <Button
        android:id="@+id/btnListaEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="Lista de Estudiantes"
        android:onClick="mostrarLista"
        />
    <Button
        android:id="@+id/btnMisDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="Mis Datos "
        android:onClick="mostrarDatos"
        />

</LinearLayout>